{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "target": "ESNext",

        "moduleResolution": "bundler",
        "verbatimModuleSyntax": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "paths": {
            "$/*": ["./resources/js/*"],
            "$actions/*": [
                "./resources/js/generated/actions/App/Http/Controllers/*"
            ],
            "$routes/*": ["./resources/js/generated/routes/*"]
        },

        "strict": true,
        "libReplacement": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true
    },
    "include": [
        "resources/**/*.svelte",
        "resources/**/*.svelte.js",
        "resources/**/*.svelte.ts",
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.js"
    ]
}
